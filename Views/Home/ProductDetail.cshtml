@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model App.Domain.Core.DTOs.ProductDto
@inject SignInManager<IdentityUser<int>> SignInManager
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <img class="w-50 h-50" src="@Model.ImageUrl"/>
        </div>
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <p>@Model.Description</p>
        </div>
        <div class="col-md-3">
            <h2>@Model.Price</h2>
            <a asp-area="Customer" asp-controller="Customer" asp-action="BuyProductNormal" asp-route-productId="@Model.Id" class="btn btn-outline-success">Buy right now!</a>
            <a  class="btn btn-outline-info" asp-area="Customer" asp-controller="Customer" asp-action="CheckHasBid" asp-route-productId="@Model.Id">Or suggest an offer!</a>
        </div>
    </div>
    <hr/>
    <div class="row">
        <h4>Comments</h4>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                    <div class="card-body p-4">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <form class="form-control mb-4" asp-area="Customer" asp-controller="Customer" asp-action="AddComment" asp-route-userId="@ViewBag.User.Id" asp-route-productId="@Model.Id">
                                <input name="message" type="text" id="addANote" class="form-control" placeholder="Type comment..."/>
                                <label class="form-label" for="addANote">+ Add a note</label>
                                <button type="submit" class="btn btn-blue btn-round">submit</button>
                            </form>
                        }
                        @foreach (var i in ViewBag.Comments)
                        {
                            <div class="card mb-4">
                                <div class="card-body">
                                    <p>@i.Message</p>
                                    <div class="d-flex justify-content-between">
                                        <div class="d-flex flex-row align-items-center">
                                            <p class="small mb-0 ms-2">@i.Customer.UserName</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>