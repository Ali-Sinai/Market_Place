<div class="container">
    <div class="row">
        <h2 class="text-center m-4">Booth<span><a class="text-secondary text-decoration-none" asp-controller="Home" asp-action="AllBooth"> ></a></span></h2>
        
        @foreach (var item in ViewBag.PartofBooths)
        {
            <div class="card m-2" style="width: 15%;">
                <img src="@item.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text" >@item.Description</p>
                    <a asp-controller="Home" asp-action="BoothDetail" asp-route-boothId="@item.Id" class="btn btn-outline-success">Go to booth</a>
                </div>
            </div>
        }
    </div>
    <hr/>
    <div class="row m-t-50 d-flex justify-content-center align-items-center" style="width: 100%; height: 100%">
        <h2 class="text-center m-4">Categories</h2>
        @foreach (var item in ViewBag.PartofCategories)
        {
            <div class=" card m-1 border-0" style="width: 10%; height: 10%;">
                <img class="rounded-circle rounded-end-5 rounded-start-5" src="@item.ImageUrl"/>
                    <a asp-controller="Home" asp-action="CategoryProducts" asp-route-categoryId="@item.Id" class="text-decoration-none text-white"><h4 class="text-center">@item.Name</h4></a>
            </div>
        }
    </div>
    <hr/>
    <div class="row">
        <h2 class="text-center m-4">You can buy products from Bids too!</h2>
        @foreach (var item in ViewBag.RandomBids)
        {
            @if (item != null && item.Product != null)
            {
                <div class=" card m-1 border-0" style="width: 13%;">
                    <a asp-area="" asp-controller="Home" asp-action="BidDetails" asp-route-bidId="@item.Id"><img class="rounded-circle rounded-end-5 rounded-start-5 card-img-top" src="@item.Product.ImageUrl"/></a>
                    <div class="card-body text-center">
                        <h4 class="text-center">@item.Product.Name</h4>
                        <p>Starts from : <span>@item.BasePrice $</span></p>
                    </div>
                </div>
            }
        }
    </div>
</div>
