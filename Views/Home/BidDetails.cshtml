@using Microsoft.AspNetCore.Identity
@model App.Domain.Core.DTOs.BidDto
@inject SignInManager<IdentityUser<int>> SignInManager
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="container">
                <img src="@Model.Product.ImageUrl"/>
            </div>
        </div>
        <div class="col-md-9">
            <h3>@Model.Product.Name</h3>
            <p>@Model.Product.Description</p>
            Base Price : <p class="text-black-50">@Model.BasePrice</p>
        </div>
    </div>
    @if (Model.IsOpen)
    {
        @if (SignInManager.IsSignedIn(User))
        {
            <div>
                <form class="form-control" asp-area="Customer" asp-controller="Customer" asp-action="BuyInBid" asp-route-bidId="@Model.Id" asp-route-offer="offer" asp-route-userId="@ViewBag.User.Id">
                    <lable>Suggestion Price</lable>
                    <input type="number" class="form-control" name="offer"/>
                    <button type="submit" class="btn btn-success" >Submit</button>
                </form>
            </div>
        }
        else
        {
            <h4>Login to make a suggestion!</h4>
        }
    }
</div>