@model App.Domain.Core.DTOs.BidDto
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="container">
                <img class="w-50 h-50" src="@Model.Product.ImageUrl"/>
            </div>
        </div>
        <div class="col-md-9">
            <h3>@Model.Product.Name</h3>
            <p>@Model.Product.Description</p>
            <p>قیمت پایه : <span class="text-white">@Model.BasePrice</span></p>
            <p>بالاترین قیمت پیشنهادی: <span class="text-white">@Model.HighestPrice</span></p>
            @if (Model.IsOpen)
            {
                <div>
                    <form class="form-control" asp-area="Customer" asp-controller="Customer" asp-action="BuyInBid" asp-route-bidId="@Model.Id" asp-route-userId="@ViewBag.User.Id">
                        <lable>Suggestion Price</lable>
                        <input type="number" class="form-control" name="offer"/>
                        <button type="submit" class="btn btn-success" >Submit</button>
                    </form>
                </div>
            }
        </div>
    </div>
    
</div>