@model RegisterViewModel
@{
    ViewData["Title"] = "Register Admin";
}

<!-- BEGIN LOEADING -->
<div id="loader" xmlns="http://www.w3.org/1999/html">
    <div class="spinner"></div>
</div><!-- /loader -->
<!-- END LOEADING -->

<!-- BEGIN WRAPPER -->
<div class="fixed-modal-bg"></div>
<a href="#" class="btn btn-info btn-icon btn-round btn-lg" id="toggle-dark-mode">
    <i class="icon-bulb"></i>
</a>
<div class="modal-page shadow">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <p class="text-center m-t-30 m-b-40">
                    <i class="icon-user-following border img-circle font-xxxlg p-20"></i>
                </p>
                <h2 class="text-center m-b-20">ثبت نام </h2>
                <hr>

                <form id="advanced-form" method="post" asp-area="Identity" asp-controller="AuthAdmin" asp-action="Register">
                    <div class="form-group">
                        <label class="sr-only control-label" asp-for="UserName"></label>
                        <div class="input-group round">
                            <span class="input-group-addon">
                                <i class="icon-user"></i>
                            </span>
                            <input asp-for="UserName" type="text" class="form-control round" id="username" placeholder="نام کاربری">
                            <span asp-validation-for="UserName" class="form-control"></span>
                        </div><!-- /.input-group-->
                    </div><!-- /.form-group -->
                    <div class="form-group">
                        <label class="sr-only control-label" asp-for="Email"></label>
                        <div class="input-group round">
                            <span class="input-group-addon">
                                <i class="icon-envelope"></i>
                            </span>
                            <input asp-for="Email" type="text" class="form-control round ltr text-left" id="email" placeholder="مثال:info@site.com">
                            <span asp-validation-for="Email" class="form-control"></span>
                        </div><!-- /.input-group-->
                    </div><!-- /.form-group -->
                    <div class="form-group">
                        <label class="sr-only control-label" asp-for="Password"></label>
                        <div class="input-group round">
                            <span class="input-group-addon">
                                <i class="icon-key"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control round ltr text-left" id="password" placeholder="رمز عبور">
                            <span asp-validation-for="Password" class="form-control"></span>
                        </div><!-- /.input-group-->
                    </div><!-- /.form-group -->
                    <div class="form-group">
                        <label class="sr-only control-label" asp-for="ConfirmPassword"></label>
                        <div class="input-group round">
                            <span class="input-group-addon">
                                <i class="icon-key"></i>
                            </span>
                            <input asp-for="ConfirmPassword" type="password" class="form-control round ltr text-left" id="confirm_password" placeholder="تکرار رمز عبور">
                            <span asp-validation-for="ConfirmPassword" class="form-control"></span>
                        </div><!-- /.input-group-->
                    </div><!-- /.form-group -->
                    <div class="form-group">
                        <div class="input-group round">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="agree" name="agree" value="agree">
                                    <a href="#">قوانین و مقررات</a>
                                    سایت را می پذیرم
                                </label>
                            </div><!-- /.checkbox -->
                        </div><!-- /.input-group-->
                    </div><!-- /.form-group -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-info btn-round btn-block" name="signup" value="Sign up">
                            <i class="icon-check"></i>
                            ثبت نام
                        </button>
                    </div><!-- /.form-group -->
                </form>

                <hr class="m-b-30">
                @*<a href="forget.html" class="btn btn-default btn-round btn-block m-b-10">
                    <i class="icon-refresh font-lg"></i>
                    بازیابی رمز عبور
                </a>*@
                <a href="/Identity/AuthAdmin/Login" class="btn btn-default btn-round btn-block">
                    <i class="icon-user-follow font-lg"></i>
                    ثبت نام کرده اید؟ وارد شوید!
                </a>
            </div><!-- /.col-md-12 -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div><!-- /.modal-page -->
<!-- END WRAPPER -->