@model List<App.Domain.Core.Entities.Booth>
@{
}

<div class="container">
    <div class="row">
        <h1 class="text-center text-white m-4">غرفه ها</h1>
        @foreach (var item in Model)
        {
            <div class="card m-2" style="width: 15%;">
                <img src="@item.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text" >@item.Description</p>
                    <a asp-area="" asp-controller="Home" asp-action="BoothDetail" asp-route-boothId="@item.Id" class="btn btn-success btn-block mt-4">Go to booth</a>
                    <a class="btn btn-green btn-block mt-2" asp-area="Admin" asp-controller="Admin" asp-action="EditBooth" asp-route-boothId="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-block mt-2" asp-area="Admin" asp-controller="Admin" asp-action="DeleteBooth" asp-route-boothId="@item.Id">Delete</a>
                </div>
            </div>
        }
    </div>
</div>